<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CryptoAnalysisAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 기본 브랜드 색상 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 보조 브랜드 색상 -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- 상태바 색상 -->
        <item name="android:statusBarColor">@color/primary_variant</item>

        <!-- 배경 색상 -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- 카드 스타일 -->
        <item name="cardBackgroundColor">@color/card_background</item>

        <!-- 텍스트 색상 -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- 버튼 스타일 -->
        <item name="materialButtonStyle">@style/Widget.CryptoAnalysis.Button</item>
    </style>

    <!-- 버튼 스타일 정의 -->
    <style name="Widget.CryptoAnalysis.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/accent</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 구독 버튼용 스타일 -->
    <style name="Widget.CryptoAnalysis.Button.Subscription" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_light</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/accent</item>
        <item name="strokeColor">@color/accent</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>